@model User;

<h2>Register</h2>


<form asp-controller="User" asp-action="Register" method="post" class="row g-3">


    <div class="form-group">
        <label for="Username">Username</label>
        <input type="text" class="form-control" id="Username" name="Username" />
        <span asp-validation-for="Username" class="Alert-Danger"></span>
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" />
        <span asp-validation-for="Password" class="Alert-Danger"></span>
    </div>
    <div class="form-group">
        <label for="ConfirmPassword">Confirm Password</label>
        <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="Alert-Danger"></span>
    </div>
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" />
        <span asp-validation-for="Name" class="Alert-Danger"></span>
    </div>
    <div class="form-group">
        <label for="Age">Age</label>
        <input type="number" class="form-control" id="Age" name="Age" />
        <span asp-validation-for="Age" class="Alert-Danger"></span>
    </div>
    <div class="form-group">
        <label for="DateOfBirth">Date of Birth</label>
        <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" />
        <span asp-validation-for="DateOfBirth" class="Alert-Danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label-lg" for="imageFile">Upload Profile Picture (Optional)</label>
        <input class="input-group" type="file" name="imageFile" />
    </div>


    <button type="submit" class="btn btn-primary">Register</button>
</form>




